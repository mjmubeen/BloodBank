<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/homesearch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="14dp"
        android:contentDescription="@string/home_search"
        app:layout_constraintBottom_toTopOf="@+id/text_home_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homeprofile"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/search" />

    <ImageView
        android:id="@+id/homeprofile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="11dp"
        android:contentDescription="@string/home_profile"
        app:layout_constraintBottom_toTopOf="@+id/text_home_profile"
        app:layout_constraintEnd_toStartOf="@+id/homesearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/text_home_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="25dp"
        android:text="@string/home_donor_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homesearch" />

    <TextView
        android:id="@+id/text_home_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="@string/profile"
        app:layout_constraintBottom_toTopOf="@+id/homeRequest"
        app:layout_constraintEnd_toEndOf="@+id/homeprofile"
        app:layout_constraintStart_toStartOf="@+id/homeprofile" />


    <TextView
        android:id="@+id/text_homeRequest"
        android:layout_width="104dp"
        android:layout_height="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="147dp"
        android:layout_marginBottom="149dp"
        android:text="@string/home_blood_request"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/homeRequest" />

    <ImageView
        android:id="@+id/homeRequest"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:contentDescription="@string/home_bloodrequest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_homeRequest"
        app:layout_constraintStart_toStartOf="@+id/homeprofile"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/request" />

</android.support.constraint.ConstraintLayout>